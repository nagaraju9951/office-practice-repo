pipeline {
    agent {
        node {
            label 't056-runner'
        }
    }
    stages {
        stage('checkout') {
            steps {
                git credentialsId: 'ca-git-access', branch: 'deploy-on-container', url: "https://git.cloudavise.com/visops/t056/jenkins-ngnix-deployment.git"
            }
        }
        stage('prepare') {
            steps {
                sh "chmod +x deploy_script.sh"
                sh "./deploy_script.sh docker-prepare"
            }
        }
        stage('deploy') {
            steps {
                sh "./deploy_script.sh docker-deploy"
            }
        }
    }
}
